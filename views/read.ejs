<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/styles.css">

</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a class="text-blue-500 m3-3" href="/">Back to home</a>
        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
        <div class="users flex flex-wrap gap-3">
            <% users.forEach(function(user){ %>
                <div class="user w-72 p-3 bg-zinc-800 rounded-lg">
                    <div class="w-full bg-zinc-500 h-72 rounded-lg">
                        <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="">
                    </div>
                    <h3 class="text-xl tracking-tighter mt-3 "><%= user.name  %></h3>
                    <h5 class="text-zinc-500" ><%= user.email %></h5>
                    <div class="flex gap-3 mt-10">
                        <a class="text-zinc-200">Edit User</a>
                        <a class="text-red-500" href="">Delete User</a>
                    </div>
                </div>
          <%  }) %>
            
        </div>
        
    </div>
</body>
</html>